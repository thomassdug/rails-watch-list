<% if @list.photo.attached? %>
<div class="banner-lists" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill, :transformation => {:effect => "blur:500"} %>')">
  <% else %>
<div class="banner-lists" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'madtm8ngbekbvcnzureu', height: 300, crop: :fill, :transformation => {:effect => "blur:500"} %>') ">
  <% end %>
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container my-3">
  <%= link_to "< Back to my lists", lists_path, class:"back-button" %>
  <div class="row my-4">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-4">
      <div class="card my-2" style="width: 18rem;">
        <img class="card-img-top" alt="..." src= <%= bookmark.movie.poster_url %>>
        <div class="card-body" id="card-body-bookmark">
          <p class="card-title"><strong><%= bookmark.movie.title %></strong></p>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text">-<em><%= bookmark.comment %></em></p>
          <p> <%= link_to "",
                      bookmark_path(bookmark),
                      class: "far fa-trash-alt",
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <p class="text-center"><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn btn-ghost" %></p>
</div>
