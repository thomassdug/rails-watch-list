<div class="banner-lists" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1651&q=80);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container my-3">
  <%= link_to "< Back to my lists", lists_path %>
  <div class="row my-4">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-4">
      <div class="card my-2" style="width: 18rem;">
        <img class="card-img-top" alt="..." src= <%= bookmark.movie.poster_url %>>
        <div class="card-body" id="card-body-bookmark">
          <p class="card-title"><strong><%= bookmark.movie.title %></strong></p>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text">-<em><%= bookmark.comment %></em></p>
          <p> <%= link_to "",
                      bookmark_path(bookmark),
                      class: "far fa-trash-alt",
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <p class="text-center"><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %></p>
</div>
